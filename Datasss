CREATE TABLE Book_Tbl(
ISBN varchar2(10) PRIMARY KEY,
Book_title Varchar2(20) Not null,
Book_type Char(1),
//(should accepct only G or T G-general,T-Technical)
Author_code Number(5),//Not null and the values used here should be prsent in the Author_Tbl)
Book_cost Number(8,2) Not null);